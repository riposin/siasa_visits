-- Triggers
CREATE TRIGGER setEmptyToNullConfirmDate
         AFTER INSERT
            ON preregistrations
          WHEN trim(new.confirmed_at) IS ''
BEGIN
    UPDATE preregistrations
       SET confirmed_at = NULL
     WHERE rowid = NEW.rowid;
END;

CREATE TRIGGER changeEmptyToNullConfirmDate
         AFTER UPDATE
            ON preregistrations
          WHEN trim(new.confirmed_at) IS ''
BEGIN
    UPDATE preregistrations
       SET confirmed_at = NULL
     WHERE rowid = NEW.rowid;
END;

.quit
